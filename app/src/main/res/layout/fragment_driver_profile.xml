<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/windowBackground">

                <ImageView
                    android:id="@+id/driver_Profile_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@color/white" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/driver_profile"
                    android:layout_width="@dimen/def_profile"
                    android:layout_height="@dimen/def_profile"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:layout_marginBottom="@dimen/activity_margin_16"

                    android:layout_gravity="center"
                    android:src="@drawable/icon_profile" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_16"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_margin_16"
                android:paddingRight="@dimen/activity_margin_32">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:paddingLeft="@dimen/activity_margin_16"
                        android:text="NAME"
                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/driver_profile_name_output"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="NAME"
                        android:paddingLeft="@dimen/activity_margin_10"
                        android:singleLine="true"
                        android:textAppearance="@style/TextLabel"
                        android:textColor="@color/app_textcolor"
                        android:textColorHint="@color/app_border"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:paddingLeft="@dimen/activity_margin_16"
                        android:text="EMAIL"
                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/driver_profile_email_output"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="EMAIL@EMAIL.COM"
                        android:paddingLeft="@dimen/activity_margin_10"

                        android:singleLine="true"
                        android:textAppearance="@style/TextLabel"
                        android:textColor="@color/app_textcolor"
                        android:textColorHint="@color/app_border"
                        android:textSize="@dimen/text_size" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:paddingLeft="@dimen/activity_margin_16"
                        android:text="PHONE NUMBER"
                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/driver_profile_phone_output"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="xxx-xxx-xxxx"
                        android:paddingLeft="@dimen/activity_margin_10"

                        android:singleLine="true"
                        android:textAppearance="@style/TextLabel"
                        android:textColor="@color/app_textcolor"
                        android:textColorHint="@color/app_border"
                        android:textSize="@dimen/text_size" />
                    <TextView
                        android:id="@+id/driver_profilePic_edit"
                        android:layout_width="0dp"
                        android:layout_weight=".1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/btn_selector"
                        android:text="Edit"
                        android:paddingTop="@dimen/activity_margin_3"
                        android:paddingBottom="@dimen/activity_margin_3"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_ultrasmall" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:paddingLeft="@dimen/activity_margin_16"
                        android:text="DATE OF BIRTH"
                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/driver_profile_dob_output"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="00/Month/Year"
                        android:singleLine="true"
                        android:paddingLeft="@dimen/activity_margin_10"

                        android:textAppearance="@style/TextLabel"
                        android:textColor="@color/app_textcolor"
                        android:textColorHint="@color/app_border"
                        android:textSize="@dimen/text_size" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:paddingLeft="@dimen/activity_margin_16"
                        android:text="ANNIVERSARY"
                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/driver_profile_anniversary_output"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@android:color/transparent"
                        android:hint="00/Month/Year"
                        android:singleLine="true"
                        android:paddingLeft="@dimen/activity_margin_10"

                        android:textAppearance="@style/TextLabel"
                        android:textColor="@color/app_textcolor"
                        android:textColorHint="@color/app_border"

                        android:textSize="@dimen/text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:orientation="horizontal"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:paddingLeft="@dimen/activity_margin_16"
                        android:text="GENDER"
                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/driver_profile_gender_output"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@android:color/transparent"
                        android:hint="Male"
                        android:singleLine="true"
                        android:textColor="@color/app_textcolor"
                        android:textColorHint="@color/app_border"
                        android:paddingLeft="@dimen/activity_margin_10"

                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:paddingLeft="@dimen/activity_margin_16"
                        android:text="CAR TRANSMITION"
                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/driver_profile_transmission_output"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@android:color/transparent"
                        android:hint="Automatic"
                        android:singleLine="true"
                        android:paddingLeft="@dimen/activity_margin_10"

                        android:textColor="@color/app_textcolor"
                        android:textColorHint="@color/app_border"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:paddingLeft="@dimen/activity_margin_16"
                        android:text="NAVIGATION"
                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/driver_profile_navigation_output"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@android:color/transparent"
                        android:hint="Dezi Map"
                        android:paddingLeft="@dimen/activity_margin_10"

                        android:singleLine="true"
                        android:textColor="@color/app_textcolor"
                        android:textColorHint="@color/app_border"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:paddingLeft="@dimen/activity_margin_16"
                        android:text="LICENSE NUMBER"
                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/driver_profile_license_number_output"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@android:color/transparent"
                        android:hint="xx-xxxx-xxxxxr"
                        android:singleLine="true"
                        android:paddingLeft="@dimen/activity_margin_10"

                        android:textAppearance="@style/TextLabel"
                        android:textColor="@color/app_textcolor"
                        android:textColorHint="@color/app_border"

                        android:textSize="@dimen/text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_margin_16"
                        android:text="SSN                "
                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/driver_profile_ssn_output"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="xx-xxxx-xxxxxr"
                        android:singleLine="true"
                        android:paddingLeft="@dimen/activity_margin_10"

                        android:textAppearance="@style/TextLabel"
                        android:textColor="@color/app_textcolor"
                        android:textColorHint="@color/app_border"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:paddingLeft="@dimen/activity_margin_16"
                        android:text="GET CONNECTED WITH SOCIAL"

                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_5"
                        android:paddingLeft="@dimen/activity_margin_16"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/driver_profile_facebook"
                            android:layout_width="@dimen/activity_margin_32"
                            android:layout_height="@dimen/activity_margin_32"
                            android:layout_margin="@dimen/activity_margin_3"
                            android:scaleType="centerCrop"
                            android:src="@drawable/facebook" />

                        <ImageView
                            android:id="@+id/driver_profile_google"
                            android:layout_width="@dimen/activity_margin_32"
                            android:layout_height="@dimen/activity_margin_32"
                            android:layout_margin="@dimen/activity_margin_3"
                            android:src="@drawable/google" />

                        <ImageView
                            android:id="@+id/driver_profile_twitter"
                            android:layout_width="@dimen/activity_margin_32"
                            android:layout_height="@dimen/activity_margin_32"
                            android:layout_margin="@dimen/activity_margin_3"
                            android:src="@drawable/twitter" />

                        <com.twitter.sdk.android.core.identity.TwitterLoginButton
                            android:id="@+id/twitterLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_10"
                    android:layout_marginTop="@dimen/activity_margin_10"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_margin_16"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/driver_profile_logout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/btn_selector"
                        android:text="LOGOUT"
                        android:textColor="@color/app_border" />

                    <Button
                        android:id="@+id/driver_profile_edit_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_5"
                        android:layout_weight=".5"
                        android:background="@drawable/btn_selector"
                        android:text="EDIT"
                        android:textColor="@color/green" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>