<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/activity_margin_10"
    android:layout_marginRight="@dimen/activity_margin_10"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_margin_3">
        <LinearLayout
            android:id="@+id/flag_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/view_countryflag"
                android:layout_width="@dimen/def_country_flag"
                android:layout_height="@dimen/def_country_flag"
                android:layout_gravity="center"
                android:scaleType="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/country_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/flag_layout"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/activity_margin_10">
            <TextView
                android:id="@+id/view_countryname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="India"
                android:singleLine="true"
                android:textSize="@dimen/text_size_big"
                android:textColor="@color/app_textcolor"
                android:gravity="left"/>
            <TextView
                android:id="@+id/view_countrycode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91"
                android:singleLine="true"
                android:textSize="@dimen/text_size"
                android:textColor="@color/app_textcolor"
                android:gravity="left"
                android:layout_marginTop="@dimen/activity_margin_3"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_border"
        android:layout_alignParentBottom="true"
        />
</LinearLayout>