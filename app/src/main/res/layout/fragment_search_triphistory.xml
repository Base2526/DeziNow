<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_margin="@dimen/activity_margin_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/layout_bg_shape"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_margin_10"
            android:paddingRight="@dimen/activity_margin_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_10"
                android:text="Search Options"
                android:textColor="@color/app_textcolor"
                android:textSize="@dimen/text_size_big"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_10"
                android:padding="@dimen/activity_margin_10"
                android:text="Sort By Date:"
                android:textColor="@color/app_textcolor"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/latest"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/latest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latest" />

                <RadioButton
                    android:id="@+id/oldest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_10"
                    android:text="Oldest" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_10"
                android:padding="@dimen/activity_margin_10"
                android:text="Sort By Billing Amount:"
                android:textColor="@color/app_textcolor"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/activity_margin_10"
                android:layout_marginRight="@dimen/activity_margin_10"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingTop="9dp"
                    android:text="0$ - 50$"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/activity_margin_10"
                    android:src="@drawable/ic_keyboard_down" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_10"
                android:padding="@dimen/activity_margin_10"
                android:text="Status:"
                android:textColor="@color/app_textcolor"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/activity_margin_10"
                android:layout_marginRight="@dimen/activity_margin_10"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingTop="9dp"
                    android:text="Completed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/activity_margin_10"
                    android:src="@drawable/ic_keyboard_down" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_10"
                android:padding="@dimen/activity_margin_10"
                android:text="Pickup/Drop off Location:"
                android:textColor="@color/app_textcolor"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/activity_margin_10"
                android:layout_marginRight="@dimen/activity_margin_10"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingTop="9dp"
                    android:text="Favourite places Location"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/activity_margin_10"
                    android:src="@drawable/ic_keyboard_down" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin_10"
                android:layout_marginRight="@dimen/activity_margin_10"
                android:layout_marginTop="@dimen/activity_margin_16"
                android:background="@color/colorPrimary">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minLines="4"
                    android:maxLines="4"
                    android:padding="@dimen/activity_margin_10"
                    android:gravity="left"
                    android:background="@null"
                    android:text="Or By Input Address"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin_10"
                android:layout_marginRight="@dimen/activity_margin_10"
                android:layout_marginTop="@dimen/activity_margin_16"
                android:layout_marginBottom="@dimen/activity_margin_16"
                android:text="Search"
                android:textColor="@color/green"
                android:background="@drawable/btn_selector"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>