<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="1.5dp"
    android:padding="@dimen/activity_margin_5"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/view_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_margin_5"
            android:text="xxxxxxxxxxxx4242"
            android:textStyle="bold"
            android:singleLine="true"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/app_textcolor"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/cardtype_layout"/>
        <!--<LinearLayout
            android:id="@+id/card_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/cardtype_layout"
            android:gravity="center"
            android:layout_marginLeft="@dimen/activity_margin_10">

        </LinearLayout>-->
        <LinearLayout
            android:id="@+id/cardtype_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/activity_margin_16"
            android:layout_marginLeft="@dimen/activity_margin_16"
            android:layout_alignParentRight="true"
            android:gravity="center">
            <ImageView
                android:id="@+id/view_cardtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/visa"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/activity_margin_5"
        android:background="@color/app_border"
        android:layout_alignParentBottom="true"
        />
</LinearLayout>