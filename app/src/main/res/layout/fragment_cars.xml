<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_cars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_10"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_margin_16"
            android:layout_marginLeft="@dimen/activity_margin_16"
            android:layout_marginRight="@dimen/activity_margin_16">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD CAR"
                android:textSize="@dimen/text_size_big"
                android:textColor="@color/app_textcolor"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/activity_margin_10"
                android:layout_marginBottom="@dimen/activity_margin_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_margin_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin_5"
                    android:text="MAKE*"
                    android:textColor="@color/app_textcolor"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/car_make"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_16"
                    android:background="@android:color/transparent"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textAppearance="@style/TextLabel"
                    android:textColor="@color/app_textcolor"
                    android:textColorHint="@color/app_border"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/activity_margin_5"
                android:layout_marginRight="@dimen/activity_margin_5"
                android:layout_marginLeft="@dimen/activity_margin_5"
                android:background="@color/green"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_margin_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin_5"
                    android:text="MODEL*"
                    android:textColor="@color/app_textcolor"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/car_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_16"
                    android:background="@android:color/transparent"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textAppearance="@style/TextLabel"
                    android:textColor="@color/app_textcolor"
                    android:textColorHint="@color/app_border"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/activity_margin_5"
                android:layout_marginRight="@dimen/activity_margin_5"
                android:layout_marginLeft="@dimen/activity_margin_5"
                android:background="@color/green"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_margin_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin_5"
                    android:text="YEAR*"
                    android:textColor="@color/app_textcolor"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/car_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_16"
                    android:background="@android:color/transparent"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textAppearance="@style/TextLabel"
                    android:textColor="@color/app_textcolor"
                    android:textColorHint="@color/app_border"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/activity_margin_5"
                android:layout_marginRight="@dimen/activity_margin_5"
                android:layout_marginLeft="@dimen/activity_margin_5"
                android:background="@color/green"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_margin_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin_5"
                    android:text="LICENCE NUMBER (OPTIONAL)*"
                    android:textColor="@color/app_textcolor"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/car_licence_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_16"
                    android:background="@android:color/transparent"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textAppearance="@style/TextLabel"
                    android:textColor="@color/app_textcolor"
                    android:textColorHint="@color/app_border"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/activity_margin_5"
                android:layout_marginRight="@dimen/activity_margin_5"
                android:layout_marginLeft="@dimen/activity_margin_5"
                android:background="@color/green"></View>

            <!-- TRANSMISSION RADIO BUTTON -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/activity_margin_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin_5"
                    android:text="TRANSMISSION:"
                    android:textColor="@color/app_textcolor"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:checkedButton="@id/automatic">
                    <RadioButton
                        android:id="@+id/automatic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AUTOMATIC"
                        android:textSize="@dimen/text_size_ultra_ultrasmall"/>
                    <RadioButton
                        android:id="@+id/manual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MANUAL"
                        android:layout_marginLeft="@dimen/activity_margin_10"
                        android:textSize="@dimen/text_size_ultra_ultrasmall"/>
                </RadioGroup>
            </LinearLayout>
            <Button
                android:id="@+id/add_cars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:textSize="@dimen/text_size"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/activity_margin_16"
                android:background="@drawable/btn_selector"
                android:layout_marginBottom="@dimen/activity_margin_10"/>
        </LinearLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
