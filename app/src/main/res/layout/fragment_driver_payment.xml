<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_margin_16"
        android:layout_marginRight="@dimen/activity_margin_16"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_16"
            android:layout_marginTop="@dimen/activity_margin_32"
            android:gravity="center_horizontal"
            android:text="BANK  INFORMATION"
            android:textColor="@color/app_textcolor"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_32"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_margin_32"
            android:paddingRight="@dimen/activity_margin_32">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin_5"
                    android:text="BANK NAME"
                    android:textColor="@color/app_textcolor"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_16"
                    android:background="@android:color/transparent"
                    android:hint="BANK NAME"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textAppearance="@style/TextLabel"
                    android:textColor="@color/app_textcolor"
                    android:textColorHint="@color/app_border"
                    android:textSize="@dimen/text_size" />


            </LinearLayout>

            <TextView
                android:id="@+id/error_account_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_margin_5"
                android:text="Please enter correct email"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/activity_margin_5"
                android:layout_marginRight="@dimen/activity_margin_5"
                android:layout_marginTop="@dimen/activity_margin_10"
                android:background="@color/green"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_10"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_margin_32"
            android:paddingRight="@dimen/activity_margin_32">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin_5"
                    android:text="ACCT NUMBER"
                    android:textColor="@color/app_textcolor"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/account_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_16"
                    android:background="@android:color/transparent"
                    android:hint="000-000-000-00"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textAppearance="@style/TextLabel"
                    android:textColor="@color/app_textcolor"
                    android:textColorHint="@color/app_border"
                    android:textSize="@dimen/text_size" />


            </LinearLayout>

            <TextView
                android:id="@+id/error_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_margin_5"
                android:text="Please enter correct email"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/activity_margin_5"
                android:layout_marginRight="@dimen/activity_margin_5"
                android:layout_marginTop="@dimen/activity_margin_10"
                android:background="@color/green"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_10"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_margin_32"
            android:paddingRight="@dimen/activity_margin_32">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin_5"
                    android:text="ROUTING NUMBER"
                    android:textColor="@color/app_textcolor"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/routing_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_16"
                    android:background="@android:color/transparent"
                    android:hint="000-000-000-00"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textAppearance="@style/TextLabel"
                    android:textColor="@color/app_textcolor"
                    android:textColorHint="@color/app_border"
                    android:textSize="@dimen/text_size" />


            </LinearLayout>

            <TextView
                android:id="@+id/error_routing_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_margin_5"
                android:text="Please enter correct email"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/activity_margin_5"
                android:layout_marginRight="@dimen/activity_margin_5"
                android:layout_marginTop="@dimen/activity_margin_10"
                android:background="@color/green"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_10"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_margin_32"
            android:paddingRight="@dimen/activity_margin_32">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin_5"
                    android:text="BRANCH"
                    android:textColor="@color/app_textcolor"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_16"
                    android:background="@android:color/transparent"
                    android:hint="ENTER BRANCH"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textAppearance="@style/TextLabel"
                    android:textColor="@color/app_textcolor"
                    android:textColorHint="@color/app_border"
                    android:textSize="@dimen/text_size" />


            </LinearLayout>

            <TextView
                android:id="@+id/error_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_margin_5"
                android:text="Please enter correct email"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/activity_margin_5"
                android:layout_marginRight="@dimen/activity_margin_5"
                android:layout_marginTop="@dimen/activity_margin_10"
                android:background="@color/green"></View>
        </LinearLayout>

        <Button
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_16"
            android:layout_marginRight="@dimen/activity_margin_16"
            android:layout_marginTop="@dimen/activity_margin_32"
            android:background="@drawable/btn_selector"
            android:text="SAVE"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_big" />
    </LinearLayout>
</LinearLayout>
