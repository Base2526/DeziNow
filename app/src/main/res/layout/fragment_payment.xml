<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:minHeight="220dp"
        android:layout_above="@+id/bottom_layout"
        android:layout_marginLeft="@dimen/activity_margin_16"
        android:layout_marginRight="@dimen/activity_margin_16">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Your Payment Options"
            android:textSize="@dimen/text_size_heading"
            android:gravity="center"
            android:padding="@dimen/activity_margin_10"/>

        <Button
            android:id="@+id/paypal_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paypal"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:background="@color/colorPrimary"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credit Cards"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textColor="@color/app_textcolor"
            android:layout_marginTop="@dimen/activity_margin_16"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_margin_10">
            <EditText
                android:id="@+id/card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:hint="xxxxxxxxxxxxx"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:background="@drawable/layout_bg_shape"
                android:layout_marginLeft="@dimen/activity_margin_10"
                android:layout_marginRight="@dimen/activity_margin_10"
                android:singleLine="true"
                android:text="4242-4242-4242-4242"
                android:imeOptions="actionNext"/>
            <EditText
                android:id="@+id/expire_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:hint="MM"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:background="@drawable/layout_bg_shape"
                android:layout_marginLeft="@dimen/activity_margin_10"
                android:layout_marginRight="@dimen/activity_margin_10"
                android:singleLine="true"
                android:text="12"
                android:imeOptions="actionNext"/>
            <EditText
                android:id="@+id/expire_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:hint="YYYY"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:background="@drawable/layout_bg_shape"
                android:layout_marginLeft="@dimen/activity_margin_10"
                android:layout_marginRight="@dimen/activity_margin_10"
                android:singleLine="true"
                android:text="2017"
                android:imeOptions="actionNext"/>
            <EditText
                android:id="@+id/cvv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:hint="CVV"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:background="@drawable/layout_bg_shape"
                android:layout_marginLeft="@dimen/activity_margin_10"
                android:layout_marginRight="@dimen/activity_margin_10"
                android:singleLine="true"
                android:text="123"
                android:imeOptions="actionDone"/>
        </LinearLayout>
        </HorizontalScrollView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_cards"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/windowBackground"
            />
        <Button
            android:id="@+id/add_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="Add New Card"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/activity_margin_16"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_marginTop="@dimen/activity_margin_16"
        android:layout_marginBottom="@dimen/activity_margin_16"
        android:layout_marginLeft="@dimen/activity_margin_16"
        android:layout_marginRight="@dimen/activity_margin_16">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have a promo code ?"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/app_textcolor"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/searchbar_bg"
                android:padding="@dimen/activity_margin_10"
                android:textSize="@dimen/text_size"
                android:textColor="@color/app_textcolor"
                android:hint="Promo Code"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:layout_marginLeft="@dimen/activity_margin_16"
                android:layout_marginRight="@dimen/activity_margin_16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:textSize="@dimen/text_size_big"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_16"
            android:layout_marginRight="@dimen/activity_margin_16"
            android:layout_marginTop="@dimen/activity_margin_32">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="DEZI CREDIT "
                android:textSize="@dimen/text_size"
                android:textColor="@color/app_textcolor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="$ 10.00"
                android:textSize="@dimen/text_size"
                android:textColor="@color/app_textcolor"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>