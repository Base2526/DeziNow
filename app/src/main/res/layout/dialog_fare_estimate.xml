<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin_16">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin_5"
        android:gravity="center"
        android:text="Fare Estimate"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_heading" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="10dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_16"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/min_amount"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/currency_usd"
                android:gravity="center"
                android:text="35.00"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_size_heading_big"
                android:textStyle="bold" />

            <View
                android:layout_width="5dp"
                android:layout_height="2dp"
                android:layout_marginLeft="7dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/max_amount"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/currency_usd"
                android:gravity="center"
                android:text="55.00"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_size_heading_big"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_16"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="amount/mile"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="service charges"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="amount/min"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="pickup fee"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_16"
            android:background="@drawable/login_btn_selector"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big" />
    </LinearLayout>
</LinearLayout>