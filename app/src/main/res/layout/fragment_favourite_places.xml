<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_margin_16"
    android:paddingRight="@dimen/activity_margin_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin_32"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_margin_10"
        android:paddingTop="@dimen/activity_margin_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_10"
            android:text="Home"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin_32"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_margin_10"
        android:paddingTop="@dimen/activity_margin_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_10"
            android:text="Work"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnr_others"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin_32"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_margin_10"
        android:paddingTop="@dimen/activity_margin_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_10"
            android:text="Others"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_textcolor_heading"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.7"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_margin_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_10"
                    android:text="ADDRESS 1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small" />

                <ImageView
                    android:layout_width="@dimen/circle_hight"
                    android:layout_height="@dimen/circle_hight"
                    android:padding="@dimen/activity_margin_5"
                    android:src="@drawable/ok" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2687 Lexington Drive"
                android:textColor="@color/white"

                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LiveMore,"
                android:textColor="@color/white"

                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="CA 94550"

                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:paddingRight="@dimen/activity_margin_10"
            android:paddingLeft="@dimen/activity_margin_10"
            android:paddingTop="@dimen/activity_margin_5"
            android:paddingBottom="@dimen/activity_margin_5"
            >

            <ImageView
                android:layout_width="@dimen/circle_hight"
                android:layout_height="@dimen/circle_hight"
                android:src="@drawable/edit" />

            <ImageView
                android:layout_width="@dimen/circle_hight"
                android:layout_height="@dimen/circle_hight"
                android:layout_alignParentBottom="true"

                android:src="@drawable/close" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_selector"
        android:gravity="center"
        android:text="ADD"
        android:textColor="@color/green" />


</LinearLayout>
