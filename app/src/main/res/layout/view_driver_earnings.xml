<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/activity_margin_10"
    android:weightSum="1"
    android:background="@drawable/btn_selector">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/activity_margin_10">
        <TextView
            android:id="@+id/order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ORDER NUMBER"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_small"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="$ 50.00"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_heading"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_margin_10"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin_10">
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPLETED"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_small"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="April 6,2016 9:30 AM"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_margin_10"
            />
        <TextView
            android:id="@+id/passanger_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PASANGER NAME"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_margin_10"
            />
    </LinearLayout>
</LinearLayout>