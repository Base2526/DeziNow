<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/windowBackground">

                <ImageView
                    android:id="@+id/driver_Profile_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/driver_profile"
                    android:layout_width="@dimen/def_profile"
                    android:layout_height="@dimen/def_profile"
                    android:layout_gravity="top|center_horizontal"
                    android:background="@drawable/icon_profile"
                    android:src="@drawable/icon_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="@dimen/activity_margin_5"
                    android:background="@color/light_gray"
                    android:paddingBottom="@dimen/activity_margin_3"
                    android:paddingLeft="@dimen/activity_margin_10"
                    android:paddingRight="@dimen/activity_margin_10"
                    android:paddingTop="@dimen/activity_margin_3"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_ultrasmall" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_16"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_margin_32"
                android:paddingRight="@dimen/activity_margin_32">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_margin_16"
                            android:background="@android:color/transparent"
                            android:hint="NAME"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"

                            android:textAppearance="@style/TextLabel"
                            android:textColor="@color/app_textcolor"
                            android:textColorHint="@color/app_border"
                            android:textSize="@dimen/text_size_small" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/activity_margin_5"
                            android:layout_marginRight="@dimen/activity_margin_5"
                            android:layout_marginTop="@dimen/activity_margin_5"
                            android:background="@color/green"></View>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_margin_16"
                            android:background="@android:color/transparent"
                            android:hint="LAST NAME"


                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:singleLine="true"
                            android:textAppearance="@style/TextLabel"
                            android:textColor="@color/app_textcolor"
                            android:textColorHint="@color/app_border"
                            android:textSize="@dimen/text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/activity_margin_5"
                            android:layout_marginRight="@dimen/activity_margin_5"
                            android:layout_marginTop="@dimen/activity_margin_5"
                            android:background="@color/green"></View>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/error_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin_5"
                    android:text="Please enter correct email"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/login_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_16"
                        android:background="@android:color/transparent"
                        android:hint="EMAIL@EMAIL.COM"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"


                        android:textAppearance="@style/TextLabel"
                        android:textColor="@color/app_textcolor"
                        android:textColorHint="@color/app_border"
                        android:textSize="@dimen/text_size_small" />


                </LinearLayout>

                <TextView
                    android:id="@+id/error_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin_5"
                    android:text="Please enter correct email"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/activity_margin_5"
                    android:layout_marginRight="@dimen/activity_margin_5"
                    android:layout_marginTop="@dimen/activity_margin_5"
                    android:background="@color/green"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:paddingLeft="@dimen/activity_margin_5"
                        android:text="PHONE NUMBER"
                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/date_of_birth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_16"
                        android:layout_weight=".5"
                        android:gravity="left"
                        android:hint="XXX-XXX-XXXX"
                        android:maxLines="1"
                        android:textAppearance="@style/TextLabel"
                        android:textColor="@color/app_textcolor"
                        android:textColorHint="@color/app_border"
                        android:textSize="@dimen/text_size_small" />


                </LinearLayout>

                <TextView
                    android:id="@+id/error_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin_5"
                    android:text="Please enter correct email"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/activity_margin_5"
                    android:layout_marginRight="@dimen/activity_margin_5"
                    android:layout_marginTop="@dimen/activity_margin_5"
                    android:background="@color/green"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:paddingLeft="@dimen/activity_margin_5"
                        android:text="DATE OF BIRTH"
                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/login_password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_16"
                        android:layout_weight=".5"
                        android:hint="XX/XX/XXXX"
                        android:maxLines="1"
                        android:textColor="@color/app_textcolor"
                        android:textColorHint="@color/app_border"
                        android:textSize="@dimen/text_size_small" />


                </LinearLayout>

                <TextView
                    android:id="@+id/error_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin_5"
                    android:text="Please enter correct email"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/activity_margin_5"
                    android:layout_marginRight="@dimen/activity_margin_5"
                    android:layout_marginTop="@dimen/activity_margin_5"
                    android:background="@color/green"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_16"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:paddingLeft="@dimen/activity_margin_5"
                        android:text="ANNIVERSARY"
                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/anniversary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_16"
                        android:layout_weight=".5"
                        android:hint="XX/XX/XXXX"
                        android:maxLines="1"
                        android:textAppearance="@style/TextLabel"
                        android:textColor="@color/app_textcolor"
                        android:textColorHint="@color/app_border"
                        android:textSize="@dimen/text_size_small" />


                </LinearLayout>

                <TextView
                    android:id="@+id/error_anniversary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin_5"
                    android:text="Please enter correct email"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/activity_margin_5"
                    android:layout_marginRight="@dimen/activity_margin_5"
                    android:layout_marginTop="@dimen/activity_margin_5"
                    android:background="@color/green"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_margin_5"
                        android:layout_marginLeft="@dimen/activity_margin_5"
                        android:layout_marginRight="@dimen/activity_margin_5"
                        android:layout_marginTop="@dimen/activity_margin_10"
                        android:text="GET CONNECTED WITH SOCIAL"

                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/text_size"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_3"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/driver_profile_facebook"
                            android:layout_width="@dimen/activity_margin_32"
                            android:layout_height="@dimen/activity_margin_32"
                            android:layout_margin="@dimen/activity_margin_3"
                            android:scaleType="centerCrop"
                            android:src="@drawable/facebook" />

                        <ImageView
                            android:id="@+id/driver_profile_google"
                            android:layout_width="@dimen/activity_margin_32"
                            android:layout_height="@dimen/activity_margin_32"
                            android:layout_margin="@dimen/activity_margin_3"
                            android:src="@drawable/google" />

                        <ImageView
                            android:id="@+id/driver_profile_twitter"
                            android:layout_width="@dimen/activity_margin_32"
                            android:layout_height="@dimen/activity_margin_32"
                            android:layout_margin="@dimen/activity_margin_3"
                            android:src="@drawable/twitter" />

                        <com.twitter.sdk.android.core.identity.TwitterLoginButton
                            android:id="@+id/twitterLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_10"
                    android:layout_marginTop="@dimen/activity_margin_10"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/logout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/btn_shape_square"
                        android:text="LOGOUT"
                        android:textColor="@color/app_border" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_5"
                        android:layout_weight=".5"
                        android:background="@drawable/btn_shape_square"
                        android:text="SAVE"
                        android:textColor="@color/green" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
